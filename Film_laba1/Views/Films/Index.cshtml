@model IEnumerable<Film_laba1.Models.Film>


@{
    ViewData["Title"] = "Фільми за жанром";
}

<h1>Фільми за жанром @ViewBag.GenreName </h1>

<p>
    <a asp-action="Create" asp-route-id="@ViewBag.GenreId">Додати новий фільм</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Release)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Info)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FilmCompany)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Producer)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Release)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Info)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FilmCompany.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Producer.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id"class="btn btn-info btn-sm" >Edit</a> 
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm" >Details</a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-info btn-sm" >Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
